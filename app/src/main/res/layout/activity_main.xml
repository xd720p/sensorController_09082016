<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical"
    tools:context="com.example.xd720p.sensorcontroller_09082016.MainActivity">

    <include layout="@layout/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

        <LinearLayout
            android:id="@+id/god_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/object_elec_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/object_date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="20">

                    <Spinner
                        android:id="@+id/object_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:textColor="#000000"
                        style="@android:style/Widget.Holo.Light.Spinner"/>

                    <ImageButton
                        android:id="@+id/refresh_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:src="@drawable/refresh_24"
                        android:background="#00000000"/>
                    
                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:text="08.08.2016"/>
                    <TextView
                        android:id="@+id/time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:text="23:00"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Электрическая энергия"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/consumptoin_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="13"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Потребление"
                        android:gravity="right"
                        android:layout_weight="4"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="3"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/first_consumption"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="1024"
                            android:textColor="#5E7CFB"/>

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="кВт ч"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="3"
                        android:gravity="center_horizontal"
                        >

                        <TextView
                            android:id="@+id/second_consumption"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="1024"
                            android:textColor="#5E7CFB"/>

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="кВт ч"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="3"
                        android:gravity="left">

                        <TextView
                            android:id="@+id/third_consumption"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="1024"
                            android:textColor="#5E7CFB"/>

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="кВт ч"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/voltage_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="13"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Напряжение"
                        android:gravity="right"
                        android:layout_weight="4"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="3"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/first_voltage"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="219"
                            android:textColor="#5E7CFB"/>

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="V"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="3"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/second_voltage"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="220"
                            android:textColor="#5E7CFB"/>

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="V"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="3"
                        android:gravity="left">

                        <TextView
                            android:id="@+id/third_voltage"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="333"
                            android:textColor="#5E7CFB"/>

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="V"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#000000"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#000000"
                        android:layout_alignParentBottom="true"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Температура"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/temp_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/add_first_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Добавить первый датчик"
                    android:background="@drawable/button_press"
                    android:layout_marginRight="5dp"
                    android:padding="10dp"
                    android:textColor="#FFFFFF"
                    android:visibility="invisible"
                    android:clickable="false"
                    />

                <ListView
                    android:id="@+id/temp_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
