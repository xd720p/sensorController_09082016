<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33B5E5"
        android:gravity="right"
        >

        <ImageButton
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_black_48px"
            android:background="@drawable/action_bar_buttons"
            android:layout_marginEnd="10dp"
            />

        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mode_edit_black_48px"
            android:background="@drawable/action_bar_buttons"
            android:layout_marginEnd="10dp" />

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_black_48px"
            android:background="@drawable/action_bar_buttons"
            android:layout_marginEnd="10dp"/>

        <ImageButton
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_save_black_48px"
            android:background="@drawable/action_bar_buttons"
            android:layout_marginEnd="10dp"/>

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings_black_48px"
            android:background="@drawable/action_bar_buttons"
            android:gravity="center_horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

</LinearLayout>